require_relative '../node_modules/react-native/scripts/react_native_pods'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'

platform :ios, '10.0'
inhibit_all_warnings!

  target 'RNExternalDisplayExample' do
    config = use_native_modules!

  use_react_native!(:path => config["reactNativePath"])

  target 'RNExternalDisplayExampleTests' do
    inherit! :complete
    # Pods for testing
  end

  # Enables Flipper.
  #
  # Note that if you have use_frameworks! enabled, Flipper will not work and
  # you should disable these next few lines.
  use_flipper!({ 'Flipper-Folly' => '2.5.3', 'Flipper' => '0.81.0', 'Flipper-RSocket' => '1.3.1' })
  #[chw] Set all pods to deployment target iOS 10
  post_install do |installer|
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '10.0'
      end
    end
    flipper_post_install(installer)
  end
end

target 'RNExternalDisplayExample-tvOS' do
  # Pods for RNExternalDisplayExample-tvOS

  target 'RNExternalDisplayExample-tvOSTests' do
    inherit! :search_paths
    # Pods for testing
  end
end
